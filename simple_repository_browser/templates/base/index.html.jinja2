{% extends "base.html.jinja2" %}

{% macro page_banner() -%}
          <div class="container">
            <div class="col-md-10 mx-auto text-center">
              <h1 class="jumbotron-heading" style="padding: 50px 50px;">
                  {% block index_heading %}
                  Find, install and publish Python packages with the Python Package Index
                  {% endblock index_heading %}
              </h1>
            </div>

            <form action="{{ url_for('search') }}" type="GET" >

                <div class="col-md-4 mx-auto">
                  <div class="input-group ">
                    <div class="form-outline"  style="width: 100%;">
                      <input type="search" name="query" class="form-control" placeholder="Search projects" />
                    </div>
                  </div>
                </div>

            </form>
            <br><br>
          </div>
{% endmacro %}

{% macro banner_split() %}
        <div class="col-md-8 mx-auto">
          <div class="row">
          </div>
        </div>
{% endmacro %}


{% block page_content %}
        <section class="jumbotron" style="background-color: #006dad; color: white ; padding: 0px; margin: 0px;" id="page-banner">
            <div class="container">
            {{ page_banner() }}
            </div>
        </section>

        <section class="jumbotron" style="background-color: #ececec; color: #464646; border-bottom: 1px solid #d3d3d3; padding: 1em; margin-bottom: 1em;" id="banner-split">
            <div class="container">
            {{ banner_split() }}
            </div>
        </section>
{% endblock page_content %}
